{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zx-tauri",
  "version": "0.1.0",
  "identifier": "com.zx-tauri.app",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "zx-tauri",
        "width": 1280,
        "height": 720,
        "center": true,
        "minWidth": 1280,
        "minHeight": 720,
        "maxWidth": 1920,
        "maxHeight": 1080,
        "url": "main"
      },
      {
        "title": "zx-tauri",
        "width": 180,
        "height": 320,
        "center": true,
        "url": "login",
        "visible": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
